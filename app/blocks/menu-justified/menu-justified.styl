.menu-justified // as wrapper
	&__list
		font-size 0
		text-align justify
		clearfix()
		&:after
			content ''
			display inline-block
			width 100%
			height 1px
			background transparent
			overflow hidden
	&__item
		display inline-block
		vertical-align top
	&__link
		padding 10px
		display block
		font-size 14px
		color #000
		&:hover
			text-decoration none

